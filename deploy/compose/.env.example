# Datalyptica Environment Variables Example
# Copy this file to .env and customize the values for your deployment
# NEVER commit .env file with production passwords to version control

# =============================================================================
# SECURITY WARNING
# =============================================================================
# - Change ALL default passwords before deploying to production
# - Use strong passwords (minimum 16 characters, mixed case, numbers, symbols)
# - Consider using Docker secrets or external secret management for production
# - Rotate passwords regularly and store securely (e.g., HashiCorp Vault, AWS Secrets Manager)
# =============================================================================

# Image Versions (for reproducible builds)
DATALYPTICA_VERSION=v1.0.0
KAFKA_UI_VERSION=v0.7.2

# PostgreSQL Configuration
POSTGRES_DB=nessie
POSTGRES_USER=nessie
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Datalyptica Database Configuration (created automatically)
DATALYPTICA_DB=datalyptica
DATALYPTICA_USER=datalyptica
DATALYPTICA_PASSWORD=CHANGE_ME_DATALYPTICA_PASSWORD
NESSIE_DB=nessie

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Nessie Database Connection (should match PostgreSQL credentials)
QUARKUS_DATASOURCE_USERNAME=nessie
QUARKUS_DATASOURCE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# S3/MinIO Access Keys (should match MinIO credentials)
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=CHANGE_ME_SECURE_PASSWORD

# Network and Region Configuration (usually don't need to change these)
MINIO_REGION=us-east-1
S3_ENDPOINT=http://minio:9000
NESSIE_URI=http://nessie:19120/iceberg/main/
WAREHOUSE_LOCATION=s3://lakehouse/

# Spark Configuration
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_WORKER_MEMORY=1G
SPARK_WORKER_CORES=2

# Kafka & Zookeeper Configuration
ZOOKEEPER_PORT=2181
KAFKA_PORT=9092
KAFKA_UI_PORT=8090

# Flink Configuration
FLINK_JOBMANAGER_PORT=8081
FLINK_TASK_SLOTS=4

# Kafka Connect (Debezium) Configuration
KAFKA_CONNECT_PORT=8083

# ClickHouse Configuration
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_DB=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# dbt Configuration
DBT_DOCS_PORT=8580

