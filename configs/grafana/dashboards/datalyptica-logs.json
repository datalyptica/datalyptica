{
  "title": "Datalyptica Log Analytics",
  "tags": ["logs", "datalyptica", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Service (Last Hour)",
      "type": "bargauge",
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({project=\"datalyptica\"}[1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 2,
      "title": "Error Rate by Service (Last Hour)",
      "type": "bargauge",
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({project=\"datalyptica\"} |= \"error\" [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 10,
                "color": "yellow"
              },
              {
                "value": 50,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Log Stream (Real-time)",
      "type": "logs",
      "targets": [
        {
          "expr": "{project=\"datalyptica\"}",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 4,
      "title": "PostgreSQL Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{container=\"datalyptica-postgresql\"}",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 5,
      "title": "Trino Query Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{container=\"datalyptica-trino\"}",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true
      }
    },
    {
      "id": 6,
      "title": "Error Logs (All Services)",
      "type": "logs",
      "targets": [
        {
          "expr": "{project=\"datalyptica\"} |~ \"(?i)(error|exception|fail)\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          }
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 28
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "red"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Log Rate (Logs per Minute)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (service) (rate({project=\"datalyptica\"}[1m]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "legendFormat": "{{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 38
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Top 10 Log Producers",
      "type": "piechart",
      "targets": [
        {
          "expr": "topk(10, sum by (container) (count_over_time({project=\"datalyptica\"}[1h])))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "legendFormat": "{{container}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 46
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut"
      }
    },
    {
      "id": 9,
      "title": "Service Health (Error Rate %)",
      "type": "stat",
      "targets": [
        {
          "expr": "(sum by (service) (count_over_time({project=\"datalyptica\"} |~ \"(?i)error\" [5m])) / sum by (service) (count_over_time({project=\"datalyptica\"}[5m]))) * 100",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "${DS_LOKI}"
          },
          "legendFormat": "{{service}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 46
      },
      "options": {
        "graphMode": "none",
        "colorMode": "background",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    }
  ],
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "version": 1
}
